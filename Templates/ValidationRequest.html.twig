{% extends 'base_form.html.twig' %}

{% block title %}Prevalidation de Carte d'Identité{% endblock %}

{% block form_content %}
    <div class="card-header">
        Pré-validation d'une pièce d'identité
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.validation.lastname) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.validation.firstname) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.validation.birthdate) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.validation.type) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.validation.cni1) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.validation.cni2) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.validation.callbackURL) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.validation.allowManual) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block form_result %}
    {% if service.fault is defined and service.fault is not null %}
        {{ include('Shared/Fault.html.twig', {fault: service.fault}) }}
    {% else %}
        {{ include('Shared/ValidateGetResult.html.twig', {originalResult: originalResult,}) }}
    {% endif %}
{% endblock %}
{% block form_javascripts %}
{% endblock %}